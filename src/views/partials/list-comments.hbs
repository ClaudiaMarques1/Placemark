{{#each comments}}
  <article class="media">
    <figure class="media-left">
      <p class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/128x128.png">
      </p>
    </figure>
    <div class="media-content">
      <div class="content">
        <p>
          <strong>{{this.title}}</strong>
          <p>{{this.date}}</p>
          <br>{{this.body}}<br>
          <small><a>Like</a> · <a>Reply</a> · 3 hrs</small>
        </p>
      </div>
    </div>
  </article>
{{/each}}