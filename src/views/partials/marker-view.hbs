{{> menu}}

<form class="box"  action="/marker/{{placemark._id}}/updatemarker/{{marker._id}}" method="POST">
  <label>Update Marker Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" name="title", value="{{marker.title}}">
      </div>
      <div class="field">
        <input class="input" type="text" name="location" value="{{marker.location}}">
      </div>
      <div class="field">
        <input class="button" type="Date" name="date" value="{{marker.date}}">
      </div>
    </div>
  </div>
  <button class="button is-primary">Update Marker</button>
</form>